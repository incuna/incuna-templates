upstream --DOMAIN_NAME--_app_server {
    server unix:/var/www/--DOMAIN_NAME--/gunicorn.sock fail_timeout=0;
}

server {
    server_name --DOMAIN_NAME-- www.--DOMAIN_NAME--;

    location / {
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header Host $http_host;
        proxy_set_header X-Forwarded-Protocol $scheme;
        proxy_redirect off;
        proxy_pass http://--DOMAIN_NAME--_app_server;
        client_max_body_size 200m;
        proxy_read_timeout 1800;
    }

    location /admin {
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header Host $http_host;
        proxy_set_header X-Forwarded-Protocol $scheme;
        proxy_redirect off;
        proxy_pass http://--DOMAIN_NAME--_app_server;
        client_max_body_size 10m;
    }

    location /static {
        access_log   off;
        expires      30d;
        alias /var/www/--DOMAIN_NAME--/static_media;
    }

    location /--CLIENT_MEDIA-- {
        access_log   off;
        expires      30d;
        root /var/www/--DOMAIN_NAME--;
    }

    location /robots.txt {
        access_log   off;
        expires      30d;
        root /var/www/--DOMAIN_NAME--/static_media;
    }

    location /humans.txt {
        access_log   off;
        expires      30d;
        root /var/www/--DOMAIN_NAME--/static_media;
    }

    location /favicon.ico {
        access_log   off;
        expires      30d;
        root /var/www/--DOMAIN_NAME--/static_media;
    }
}
